{
  "version": "1.2-business-focus",
  "description": "Prioritize business context and willingness to pay",
  
  "source_weights": {
    "github": 20,
    "hackernews": 15,
    "reddit:smallbusiness": 15,
    "reddit:sysadmin": 12,
    "reddit:startups": 15,
    "reddit:freelance": 14,
    "reddit:sales": 12,
    "reddit:marketing": 12,
    "reddit:webdev": 10,
    "reddit:saas": 10,
    "reddit:entrepreneur": 12,
    "reddit:default": 8
  },
  
  "engagement_weights": {
    "github_reaction_multiplier": 2,
    "github_reaction_max": 15,
    "comments_max": 12,
    "hackernews_score_max": 12
  },
  
  "pain_point_signals": {
    "strong_pain": {
      "phrases": ["sick of", "frustrated", "hate", "tired of", "annoyed by", "fed up", "can't stand", "driving me crazy", "nightmare"],
      "score": 12
    },
    "willingness_to_pay": {
      "phrases": ["would pay", "expensive", "pricing", "cost", "price", "too much", "overpriced", "charging", "$", "subscription", "per month", "killing me", "budget", "worth it", "gladly pay"],
      "score": 18
    },
    "seeking_alternatives": {
      "phrases": ["alternative to", "better than", "instead of", "replace", "switch from", "switching to", "moving away from", "ditching", "competitor"],
      "score": 10
    },
    "time_waste": {
      "phrases": ["wasting time", "takes forever", "too slow", "manual", "repetitive", "hours spent", "time consuming", "inefficient"],
      "score": 10
    }
  },
  
  "specificity_scoring": {
    "long_body_threshold": 250,
    "long_body_score": 12,
    "medium_body_threshold": 120,
    "medium_body_score": 6,
    "contains_numbers_score": 6
  },
  
  "competition_signals": {
    "mentions_competitor": {
      "phrases": ["vs", "compared to", "like", "similar to", "docusign", "hubspot", "salesforce", "slack", "notion"],
      "score": 7
    },
    "gaps_mentioned": {
      "phrases": ["missing", "doesn't have", "lacks", "limited", "no support for", "can't do", "doesn't support", "why can't", "wish it had"],
      "score": 10
    }
  },
  
  "market_signals": {
    "business_context": {
      "phrases": ["business", "company", "team", "clients", "customers", "agency", "startup", "enterprise", "organization", "department"],
      "score": 10
    },
    "scale_indicators": {
      "phrases": ["users", "subscribers", "revenue", "growth", "scaling", "volume", "thousands of", "per month", "monthly"],
      "score": 8
    },
    "roi_mentions": {
      "phrases": ["roi", "return", "save money", "save time", "productivity", "efficiency", "bottom line", "losing money"],
      "score": 10
    }
  },
  
  "llm_config": {
    "enabled": true,
    "threshold": 45,
    "weight": 0.4,
    "base_weight": 0.6,
    "model": "anthropic/claude-3-haiku"
  },
  
  "thresholds": {
    "minimum_score": 40,
    "high_quality": 60,
    "top_tier": 80,
    "digest_top_n": 10
  }
}
