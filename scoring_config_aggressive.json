{
  "version": "1.3-aggressive",
  "description": "Aggressively boost clear pain + money signals, filter noise",
  
  "source_weights": {
    "github": 22,
    "hackernews": 16,
    "reddit:smallbusiness": 16,
    "reddit:sysadmin": 14,
    "reddit:startups": 16,
    "reddit:freelance": 15,
    "reddit:sales": 14,
    "reddit:marketing": 13,
    "reddit:webdev": 11,
    "reddit:saas": 10,
    "reddit:entrepreneur": 13,
    "reddit:default": 8
  },
  
  "engagement_weights": {
    "github_reaction_multiplier": 2,
    "github_reaction_max": 18,
    "comments_max": 15,
    "hackernews_score_max": 15
  },
  
  "pain_point_signals": {
    "strong_pain": {
      "phrases": ["sick of", "frustrated with", "hate", "tired of", "annoyed by", "fed up with", "can't stand", "driving me crazy", "nightmare", "terrible experience", "awful", "horrible", "worst", "ridiculous"],
      "score": 18
    },
    "willingness_to_pay": {
      "phrases": ["would pay", "expensive", "pricing is", "cost me", "price", "too much", "overpriced", "charging", "$100", "$50", "$", "subscription", "per month", "/month", "killing me financially", "budget for", "worth paying", "gladly pay", "happily pay"],
      "score": 20
    },
    "seeking_alternatives": {
      "phrases": ["alternative to", "better than", "instead of", "replace", "switch from", "switching to", "moving away from", "ditching", "competitor", "looking for something"],
      "score": 12
    },
    "time_waste": {
      "phrases": ["wasting time", "takes forever", "too slow", "manual process", "repetitive", "hours spent", "time consuming", "inefficient", "tedious", "still doing manually"],
      "score": 12
    },
    "urgent_need": {
      "phrases": ["need asap", "urgently need", "desperate", "critical", "must have", "immediately", "right now"],
      "score": 15
    }
  },
  
  "specificity_scoring": {
    "long_body_threshold": 200,
    "long_body_score": 15,
    "medium_body_threshold": 100,
    "medium_body_score": 8,
    "contains_numbers_score": 8
  },
  
  "competition_signals": {
    "mentions_competitor": {
      "phrases": ["vs", "compared to", "like", "similar to", "docusign", "hubspot", "salesforce", "slack", "notion", "zapier", "airtable", "monday", "asana"],
      "score": 8
    },
    "gaps_mentioned": {
      "phrases": ["missing", "doesn't have", "lacks", "limited", "no support for", "can't do", "doesn't support", "why can't", "wish it had", "would be great if"],
      "score": 12
    }
  },
  
  "market_signals": {
    "business_context": {
      "phrases": ["business", "company", "team", "clients", "customers", "agency", "startup", "enterprise", "organization", "department", "professional", "commercial"],
      "score": 12
    },
    "scale_indicators": {
      "phrases": ["users", "subscribers", "revenue", "growth", "scaling", "volume", "thousands of", "per month", "monthly", "daily", "weekly"],
      "score": 10
    },
    "roi_mentions": {
      "phrases": ["roi", "return on investment", "save money", "save time", "productivity gain", "efficiency", "bottom line", "losing money", "costing us", "worth the investment"],
      "score": 12
    }
  },
  
  "llm_config": {
    "enabled": true,
    "threshold": 45,
    "weight": 0.4,
    "base_weight": 0.6,
    "model": "anthropic/claude-3-haiku"
  },
  
  "thresholds": {
    "minimum_score": 40,
    "high_quality": 60,
    "top_tier": 80,
    "digest_top_n": 10
  }
}
